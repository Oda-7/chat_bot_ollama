# =============================================================================
# CONFIGURATION ENVIRONMENT - CHATBOT PROJECT
# =============================================================================
# Copiez ce fichier en .env et remplissez les valeurs réelles
# ATTENTION: Ne jamais commiter le fichier .env sur Git !

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================
POSTGRES_DB=chatbot_db
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=changez_ce_mot_de_passe_en_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# URL complète de connexion (générée automatiquement)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# SÉCURITÉ BACKEND
# =============================================================================
# Clé secrète pour JWT (générez une clé forte en production)
SECRET_KEY=votre_cle_secrete_tres_forte_et_aleatoire_de_production

# Durée d'expiration des tokens JWT (en minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environnement (development, production, testing)
ENVIRONMENT=development

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@exemple.com
PGADMIN_DEFAULT_PASSWORD=changez_ce_mot_de_passe_admin

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://${OLLAMA_HOST}:${OLLAMA_PORT}

# Modèle par défaut à utiliser
OLLAMA_DEFAULT_MODEL=mistral:7b+

# =============================================================================
# CONFIGURATION FRONTEND
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_WS_BASE_URL=ws://localhost:8000

# =============================================================================
# PORTS DE SERVICE
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_EXTERNAL_PORT=5432
PGADMIN_PORT=5050
OLLAMA_EXTERNAL_PORT=11434

# =============================================================================
# CONFIGURATION RÉSEAU DOCKER
# =============================================================================
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# LOGS ET DEBUGGING
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# CONFIGURATION RAG (Retrieval Augmented Generation)
# =============================================================================
# Nombre maximum de chunks à récupérer pour une requête
RAG_MAX_CHUNKS=5

# Seuil de similarité pour les chunks (0.0 à 1.0)
RAG_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# CONFIGURATION DE SÉCURITÉ AVANCÉE
# =============================================================================
# Algorithme de hachage pour les mots de passe

# CORS Origins autorisés (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# CONFIGURATION DE PERFORMANCE
# =============================================================================
# Nombre de workers pour uvicorn
WORKERS=1

# Taille maximale des fichiers uploadés (en MB)
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# BACKUP ET MAINTENANCE
# =============================================================================
# Répertoire pour les sauvegardes
BACKUP_DIR=./backups

# Fréquence de sauvegarde automatique (en heures)
AUTO_BACKUP_INTERVAL_HOURS=24
